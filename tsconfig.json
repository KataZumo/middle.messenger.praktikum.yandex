{
  "compilerOptions": {
    "target": "ES2020",
    "noEmitHelpers": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"]
    }
  },
  "include": ["src/**/*", "custom.d.ts", "server.js"],
  "exclude": ["node_modules", "dist"]
}
