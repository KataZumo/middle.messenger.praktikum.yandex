{{#> Dialog }}
  <form class="register-page">
    <div class="register-page__content">
      {{> PageTitle title="Регистрация" }}
      {{> InputField className="register-page__input" title="Почта" name="email" type="text" }}
      {{> InputField className="register-page__input" title="Логин" name="login" type="text" }}
      {{> InputField className="register-page__input" title="Имя" name="first_name" type="text" }}
      {{> InputField className="register-page__input" title="Фамилия" name="second_name" type="text" }}
      {{> InputField className="register-page__input" title="Пароль" name="password" type="password" }}
      {{> InputField className="register-page__input" title="Повторите пароль" name="password_repeat" type="password" }}
    </div>
    <div class="register-page__footer">
      {{> Button text="Зарегистрироваться" page="/pages/chat/chat" }}
      {{> Link text="Войти" page="chat" }}
    </div>
  </form>
{{/ Dialog }}

